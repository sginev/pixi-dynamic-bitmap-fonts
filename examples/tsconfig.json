{  
  "include": ["src", "types"],
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2017",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "pixi-dynamic-bitmap-fonts": ["../src"],
    },
    // "noEmit": true,
    // "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "importsNotUsedAsValues": "error",
    "sourceMap": true
  }
}
